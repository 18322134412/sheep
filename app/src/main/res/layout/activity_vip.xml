<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_background_color">

    <com.xpple.sheep.view.HeaderLayout
        android:id="@+id/top_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view_top_line_0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line_height"
        android:layout_below="@+id/top_title_bar"
        android:background="@color/global_line_color" />

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/top_title_bar"
        android:background="@mipmap/bg_vip">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/riv_avatar"
            android:layout_width="65dp"
            fresco:failureImage="@drawable/icon_error"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            fresco:placeholderImage="@mipmap/avatar_default"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/riv_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="未设置"
            android:textColor="@android:color/white"
            android:textSize="@dimen/global_big_text_size" />

        <TextView
            android:id="@+id/tv_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nickname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/global_text_size" />

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/riv_avatar"
            android:layout_alignTop="@+id/riv_avatar"
            android:layout_marginTop="3dp"
            android:src="@mipmap/level_0" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_info"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="我的特权"
            android:textSize="@dimen/global_big_text_size" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="更多>"
            android:textColor="@color/global_gray_color" />

    </RelativeLayout>

    <View
        android:id="@+id/view_top_line_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line_height"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout11"
        android:background="@color/global_line_color" />

    <RelativeLayout
        android:id="@+id/relativeLayout13"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view_top_line_2"
        android:background="@android:color/white" />

    <RelativeLayout
        android:id="@+id/relativeLayout12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout13"
        android:layout_marginTop="20dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="我的任务"
            android:textSize="@dimen/global_big_text_size" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="更多>"
            android:textColor="@color/global_gray_color" />
    </RelativeLayout>

    <View
        android:id="@+id/view_top_line_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line_height"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout12"
        android:background="@color/global_line_color" />

    <RelativeLayout
        android:id="@+id/relativeLayout14"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/view_top_line_3"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="更多任务敬请期待"
            android:textColor="@color/global_gray_color"
            android:textSize="@dimen/global_mid_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout10"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_integration_shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/global_red_clickable_no_corner_selector"
                android:gravity="center"
                android:text="积分商城"
                android:textColor="@android:color/white"
                android:textSize="@dimen/global_btn_text_size" />

            <View
                android:layout_width="@dimen/divide_line_height"
                android:layout_height="match_parent"
                android:background="@color/global_red_click_color" />

            <TextView
                android:id="@+id/tv_sign_in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/global_red_clickable_no_corner_selector"
                android:gravity="center"
                android:text="签到"
                android:textColor="@android:color/white"
                android:textSize="@dimen/global_btn_text_size" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>