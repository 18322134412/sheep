<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/dialog_root"
        android:layout_width="290.0dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/white"
        android:paddingBottom="20.0dip">

        <ImageView
            android:id="@+id/image_content"
            android:layout_width="214.0dip"
            android:layout_height="80.0dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20.0dip"
            android:background="@mipmap/dialog_charge_watting"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10.0dip"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:maxWidth="250.0dip"
            android:text="正在为您充值..."
            android:textColor="@color/global_black_color"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/toWebView"
            android:layout_width="200.0dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="5.0dip"
            android:text="稍等片刻，请勿离开此页面"
            android:textColor="@color/global_gray_color"
            android:textSize="14.0sp" />
    </RelativeLayout>
</RelativeLayout>