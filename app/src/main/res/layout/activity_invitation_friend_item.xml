<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/linearLone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="12.0dip"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/numPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="133****2743"
                    android:textColor="@color/global_red_color"
                    android:textSize="@dimen/global_mid_text_size" />

                <TextView
                    android:id="@+id/is_invest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_toRightOf="@+id/numPhone"
                    android:text="（已注册）"
                    android:textColor="@color/global_label_color"
                    android:textSize="@dimen/global_small_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linteo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:layout_marginTop="8.0dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/invest_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2014-10-20"
                    android:textColor="@color/global_red_color"
                    android:textSize="@dimen/global_small_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLoneTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/linearLone"
            android:layout_marginRight="15.0dip"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/investMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00元"
                android:textColor="@color/global_red_color"
                android:textSize="@dimen/global_mid_text_size" />

            <TextView
                android:id="@+id/statusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:layout_marginTop="8.0dip"
                android:text="已为我赚取"
                android:textColor="@color/global_red_color"
                android:textSize="@dimen/global_small_text_size" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/divide_line_height"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:background="@color/global_line_color" />
</RelativeLayout>