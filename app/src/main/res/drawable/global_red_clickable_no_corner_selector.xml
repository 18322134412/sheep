<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/global_red_click_color" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/global_red_click_color" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/global_gray_color" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/global_red_color" />
        </shape>
    </item>
</selector>